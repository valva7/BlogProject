CREATE TABLE USER_INFO (
    USER_NAME VARCHAR(15) NOT NULL,			// 이름
    USER_ID VARCHAR(15) NOT NULL,				// ID
    USER_PWD VARCHAR(15) NOT NULL,			// 비밀번호
    USER_BIRTH VARCHAR(15) NOT NULL,			// 생년월일
    USER_EMAIL VARCHAR(30) NOT NULL,			// 이메일
    USER_PHONE VARCHAR(12) NOT NULL,			// 연락처
    PRIMARY KEY (USER_ID)
);

CREATE TABLE BOARD (
    SEQ INT NOT NULL AUTO_INCREMENT,			// 시퀀스
    TITLE VARCHAR(50) NOT NULL,				// 제목
    CONTENTS VARCHAR(12000) NOT NULL,			// 내용
    WRITER VARCHAR(20) NOT NULL,				// 작성자
    CREATE_DATE VARCHAR(10) NOT NULL,			// 작성일
    DEPTH_1 VARCHAR(3) NOT NULL,				// DEPTH_1
    DEPTH_2 VARCHAR(3) NOT NULL,				// DEPTH_2
    DEPTH_3 VARCHAR(3) NOT NULL,				// DEPTH_3
    DEPTH_ALL VARCHAR(9) NOT NULL,			// DEPTH_1,2,3 합친 값
    FILE_NAME VARCHAR(100) NOT NULL,			// 첨부 파일
    READ_COUNT INT NOT NULL,				// 조회수
    PRIMARY KEY (SEQ)
);

CREATE TABLE MENU (
    MENU_NAME VARCHAR(20) NOT NULL,			// 메뉴 이름
    MENU_MASTER VARCHAR(20) NOT NULL,			// 메뉴 권한 보유자
    MENU_DEPTH_1 VARCHAR(3) NOT NULL,			// 메뉴 DEPTH_1
    MENU_DEPTH_2 VARCHAR(3) NOT NULL,			// 메뉴 DEPTH_2
    MENU_DEPTH_3 VARCHAR(3) NOT NULL,			// 메뉴 DEPTH_3
    BOARD_DEPTH VARCHAR(9) NOT NULL,			// 게시판 DEPTH (메뉴 클릭시 가져와야 하는 게시판 리스트를 구별하기 위함 - 게시판 DEPTH_1,2,3 합친 값)
    PRIMARY KEY (BOARD_DEPTH)
);

CREATE TABLE COMMENTS (
   SEQ INT AUTO_INCREMENT,				// 시퀀스
    WRITER VARCHAR(20) NOT NULL,				// 작성자
    CREATE_DATE VARCHAR(12) NOT NULL,			// 작성일
    CONTENTS VARCHAR(300) NOT NULL,			// 내용
    DEPTH_1 VARCHAR(3) NOT NULL,				// DEPTH_1
    DEPTH_2 VARCHAR(3) NOT NULL,				// DEPTH_2
    BOARD_SEQ VARCHAR(10) NOT NULL,			// 게시판
    PRIMARY KEY (SEQ)
);


CREATE TABLE FILE_LIST (
    BOARD_SEQ VARCHAR(10) NOT NULL,			// BOARD 테이블 SEQ
    FILE_NAME VARCHAR(300) NOT NULL,			// 파일명 (파일이 여러 개일 경우 , 로 구분하여 입력)
    FILE_KINDS VARCHAR(3) NOT NULL,			// 파일 구분 ('1' = 에디터 내의 파일, '2' = 첨부 파일)
    PRIMARY KEY (BOARD_SEQ)
);
